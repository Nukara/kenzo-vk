{
    "name": "Kenzo VK Music",
    "version": "1",
    "description": "",
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "persistent": false,
        "scripts": ["js/bg.js"]
    },
    "permissions": [ "tabs", "*://vkontakte.ru/*", "*://vk.com/*", "*://*.vk.me/*" ],
    "browser_action": {
        "default_title": "",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [ "*://vkontakte.ru/*", "*://vk.com/*" ],
            "css": ["audio.css"],
            "js": ["js/audio.js"]
        }
    ]
}

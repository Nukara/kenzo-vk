{
    "default_locale": "ru",
    "name": "Kenzo VK",
    "short_name": "Kenzo VK",
    "version": "1.0.0",
    "description": "__MSG_ext_description__",
    "author": "icw82",
    "icons": {
        "16": "images/icons/16.png",
        "48": "images/icons/48.png",
        "128": "images/icons/128.png"
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "downloads",
        "*://vk.com/*",
        "*://*.vk.com/*",
        "*://*.vk.me/*",
        "*://*.vk-cdn.net/*"
    ],
    "externally_connectable": {
        "matches": [
            "*://vk.com/*",
            "*://*.vk.com/*",
            "*://*.vk.me/*",
            "*://*.vk-cdn.net/*"
        ]
    },
    "background": {
        "persistent": false,
        "scripts": [
            "commons/kenzo-set.js",
            "commons/default_options.js",
            "background/script.js"
        ]
    },
    "options_page": "options/template.html",
    "content_scripts": [
        {
            "matches": [
                "*://vk.com/*",
                "*://*.vk.com/*",
                "*://*.vk.me/*"
            ],
            "css": [
                "audio/styles.css",
                "video/styles.css",
                "trash/styles.css"
            ],
            "js": [
                "commons/kenzo-set.js",
                "commons/default_options.js",
                "commons/kz-get-buffer.js",
                "audio/script.js",
                "video/script.js",
                "trash/script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "audio/download.png",
        "audio/download-c.png",
        "audio/download-u.png",
        "audio/abort.png",
        "audio/abort-c.png"
    ],
    "minimum_chrome_version": "31",
    "manifest_version": 2
}

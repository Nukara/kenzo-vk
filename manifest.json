{
    "name": "Kenzo VK Music",
    "version": "0.3",
    "description": "",
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "persistent": false,
        "scripts": ["background/script.js"]
    },
    "permissions": [ "tabs", "*://vk.com/*", "*://*.vk.me/*" ],
    "browser_action": {
        "default_title": "",
        "default_icon": "icon.png",
        "default_popup": "popup/template.html"
    },
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["*://vk.com/*", "*://*.vk.me/*" ],
            "css": ["audio/styles.css"],
            "js": ["libs/FileSaver.js", "audio/script.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "audio/download.png",
        "audio/download-c.png",
        "audio/abort.png",
        "audio/abort-c.png"
    ],
    "minimum_chrome_version": "27"
}

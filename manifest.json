{
    "default_locale": "ru",
    "name": "Kenzo VK",
    "version": "0.4.5",
    "description": "__MSG_ext_description__",
    "author": "icw82",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png" },
    "background": {
        "persistent": false,
        "scripts": ["background/script.js"]
    },
    "permissions": [ "*://vk.com/*", "*://*.vk.me/*" ],
    "browser_action": {
          "default_icon": {
            "19": "icons/128.png",
            "38": "icons/128.png"
          }//,
          //"default_title": "Kenzo VK",
          //"default_popup": "popup/template.html"
        },
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["*://vk.com/*", "*://*.vk.me/*" ],
            "css": ["audio/styles.css"],
            "js": ["libs/FileSaver.js", "audio/script.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "audio/download.png",
        "audio/download-c.png",
        "audio/abort.png",
        "audio/abort-c.png"
    ],
    "minimum_chrome_version": "27"
}
